public boolean xyzMiddle(String str) {
  
  int mid = str.length()/2;
  
  if(str.charAt(mid)== 'y'||str.charAt(mid+1)== 'y' || str.charAt(mid-1)== 'y' ){
    String front = str.substring(0,mid);
    String back = str.substring(mid+1,str.length());
    
    return Math.abs(front.length()-back.length())<=1;
  }
  
  return false;
  
}
